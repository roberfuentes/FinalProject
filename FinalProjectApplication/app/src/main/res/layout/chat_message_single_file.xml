<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/chat_message_friendUserbackgroundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:background="@color/friendUser"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        >
        <TextView
            android:padding="10dp"
            android:id="@+id/chat_message_userFriend_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/chat_message_currentUser_backgroundText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:layout_marginLeft="70dp"
        android:background="@color/currentUser"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:textAlignment="textEnd"
            android:padding="10dp"
            android:id="@+id/chat_message_currentUser_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>



</RelativeLayout>