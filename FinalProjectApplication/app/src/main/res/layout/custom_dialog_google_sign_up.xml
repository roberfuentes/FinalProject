<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/custom_dialog_sign_up_txt_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="*Name"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="15dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/custom_dialog_sign_up_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/custom_dialog_sign_up_txt_name"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/custom_dialog_sign_up_txt_age"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Age"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:inputType="number"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/custom_dialog_sign_up_txt_name"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="5dp"
        android:id="@+id/custom_dialog_sign_up_edit_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/custom_dialog_sign_up_txt_age"
        android:layout_below="@+id/custom_dialog_sign_up_edit_name"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/custom_dialog_sign_up_txt_location"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Location"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/custom_dialog_sign_up_txt_age"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="5dp"
        android:id="@+id/custom_dialog_sign_up_edit_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/custom_dialog_sign_up_txt_location"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/custom_dialog_sign_up_edit_age"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/custom_dialog_sign_up_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_below="@+id/custom_dialog_sign_up_txt_location"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>