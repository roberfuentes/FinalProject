<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="15dp"
            android:id="@+id/friend_search_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/friend_search_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/friend_search_picture"
            android:textColor="@color/colorBlack"
            />

        <Button
            android:layout_marginTop="17dp"
            android:id="@+id/friend_search_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="ADD"
            android:layout_marginRight="10dp"
            />

        <View
            android:id="@+id/friend_request__horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/friend_search_picture"
            />
    </RelativeLayout>

</RelativeLayout>